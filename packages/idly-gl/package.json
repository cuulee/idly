{
  "name": "idly-gl",
  "version": "1.3.2",
  "description": "A mapbox-gl plugin to render openstreetmap as a geojson layer.",
  "main": "dist/idly-gl.js",
  "author": "Kushan Joshi <0o3ko0@gmail.com>",
  "scripts": {
    "bundle": "webpack",
    "test": "jest $npm_package_name --config ../../jest.config.js",
    "test:watch": "jest $npm_package_name --config ../../jest.config.js --watch",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "lint": "tslint -p .",
    "pretest": "npm run lint && npm run tsc"
  },
  "license": "ISC",
  "dependencies": {
    "idly-common": "^1.3.2",
    "idly-worker": "^1.3.2",
    "lodash-es": "^4.17.4",
    "promise-worker": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/mapbox-gl": "^0.42.0",
    "awesome-typescript-loader": "^3.4.1",
    "circular-dependency-plugin": "^4.3.0",
    "duplicate-package-checker-webpack-plugin": "^2.0.1",
    "fuse-box": "^3.0.2",
    "gh-pages": "^1.1.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.0.4",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "webpack": "^3.9.1",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.9.7",
    "whatwg-fetch": "^2.0.3",
    "worker-loader": "^1.1.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/lib"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
