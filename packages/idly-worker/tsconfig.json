{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "lib",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "strict": false,
    "pretty": true,
    "declaration": true,
    "isolatedModules": false
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./xsrc/**/*.test.ts",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
